{
  "name": "app-frontend",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "browserslist": [
    "since 2017-06"
  ],
  "scripts": {
    "test": "npx jest",
    "watch": "npx jest --watch",
    "lint": "npx eslint --ext js,jsx,ts,tsx src",
    "dev": "npx parcel index.html",
    "build": "NODE_ENV=production npx parcel build index.html -d build/ --public-url '/'",
    "start": "npx serve --single build",
    "build-local": "NODE_ENV=production npx parcel build index.html -d build-local/ --public-url './'",
    "start-local": "npx serve --single build-local"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^~/src/(.*)$": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/mocks/file.js",
      "\\.(scss|sass|css)$": "identity-obj-proxy"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": ["error", "always"],
      "quotes": [2, "double"],
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars-experimental": "error"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "autoprefixer": "^9.7.4",
    "eslint": "^7.10.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.0",
    "jwt-simple": "^0.5.6",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.26",
    "tailwindcss": "^1.2.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/jwt-decode": "^2.2.0",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.4",
    "dotenv": "^8.2.0",
    "history": "^5.0.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.15",
    "react": ">=15.0.0",
    "react-dom": ">=15.0.0",
    "react-router-dom": "^5.1.2",
    "react-toastify": "^6.0.6",
    "serve": "^11.3.2"
  }
}
