{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/src/*": ["./*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "keyofStringsOnly": true,
    "lib": ["es7", "dom", "dom.iterable", "esnext.asynciterable"],
    "module": "commonjs", 
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "rootDir": ".",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5", 
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ]
  },
  "include": ["src/**/*"]
}
